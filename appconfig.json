{
    "FtpLogging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Error"
        },
        "File": {
            "Path": "ftplog..txt",
            "Append": true,
            "MinLevel": "Warning", // min level for the file logger
            "FileSizeLimitBytes": 10240000, // use to activate rolling file behaviour
            "MaxRollingFiles": 3 // use to specify max number of log files
        }
    }
}